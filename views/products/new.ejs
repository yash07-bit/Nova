<% layout('layouts/boilerplate') %>

<div class="container mt-4 mb-5">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <div class="d-flex align-items-center mb-4">
        <div class="brand-icon-box me-3 bg-success-subtle">
          <i class="bi bi-plus-circle-dotted fs-3 text-success"></i>
        </div>
        <div>
          <h1 class="display-6 fw-bold m-0">Add New Product</h1>
          <p class="text-muted m-0">
            Expand your collection with a new minimalist piece
          </p>
        </div>
      </div>

      <div class="admin-card p-4 p-md-5">
        <form
          action="/products"
          method="POST"
          enctype="multipart/form-data"
          class="validated-form"
          novalidate
        >
          <div class="row g-4">
            <div class="col-12">
              <div class="form-floating mb-1">
                <input
                  type="text"
                  class="form-control"
                  id="title"
                  name="product[title]"
                  placeholder="Product Title"
                  required
                  autofocus
                />
                <label for="title">Product Title</label>
                <div class="valid-feedback small">Perfect title!</div>
              </div>
            </div>

            <div class="col-12">
              <div class="form-floating mb-1">
                <textarea
                  class="form-control"
                  id="description"
                  name="product[description]"
                  placeholder="Description"
                  style="height: 120px"
                  required
                ></textarea>
                <label for="description">Product Description</label>
                <div class="invalid-feedback small">
                  Tell us a bit about this product.
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="input-group custom-input-group">
                <span class="input-group-text bg-white border-end-0 text-muted"
                  >$</span
                >
                <div class="form-floating flex-grow-1">
                  <input
                    type="number"
                    class="form-control border-start-0 ps-0"
                    id="price"
                    name="product[price]"
                    step="0.01"
                    min="0"
                    placeholder="0.00"
                    required
                  />
                  <label for="price">Price</label>
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-floating">
                <select
                  class="form-select"
                  id="category"
                  name="product[category]"
                  required
                >
                  <option selected disabled value="">Select category...</option>
                  <option value="electronics">Electronics</option>
                  <option value="fashion">Fashion</option>
                  <option value="home">Home</option>
                  <option value="books">Books</option>
                  <option value="beauty">Beauty</option>
                  <option value="sports">Sports</option>
                  <option value="other">Other</option>
                </select>
                <label for="category">Category</label>
              </div>
            </div>

            <div class="col-12">
              <div class="upload-zone p-5 text-center">
                <div class="upload-icon-circle mb-3">
                  <i class="bi bi-images fs-3"></i>
                </div>
                <h6 class="fw-bold">Upload Product Gallery</h6>
                <p class="text-muted small">
                  Select multiple high-quality images for your product
                </p>
                <input
                  class="form-control mt-3"
                  type="file"
                  id="image"
                  name="image"
                  multiple
                  required
                />
                <div class="invalid-feedback">
                  At least one product image is required.
                </div>
              </div>
            </div>

            <div class="col-12 mt-5">
              <div class="row g-3">
                <div class="col-md-8">
                  <button type="submit" class="btn btn-nova-dark w-100 py-3">
                    Publish Product <i class="bi bi-rocket-takeoff ms-2"></i>
                  </button>
                </div>
                <div class="col-md-4">
                  <a
                    href="/products"
                    class="btn btn-nova-outline w-100 py-3 text-secondary"
                  >
                    Cancel
                  </a>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
  /* Reuse previous Admin Card Styles */
  .admin-card {
    background: white;
    border-radius: 24px;
    border: 1px solid rgba(0, 0, 0, 0.05);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.03);
  }

  .form-control:focus,
  .form-select:focus {
    border-color: #2563eb;
    box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1);
  }

  /* Specific Upload Zone UI */
  .upload-zone {
    border: 2px dashed #e2e8f0;
    border-radius: 20px;
    background: #f8fafc;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .upload-zone:hover {
    border-color: #2563eb;
    background: #f1f5f9;
  }

  .upload-icon-circle {
    width: 60px;
    height: 60px;
    background: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    color: #64748b;
  }

  .custom-input-group .input-group-text {
    border-radius: 12px 0 0 12px;
  }

  .custom-input-group .form-control {
    border-radius: 0 12px 12px 0;
  }

  .btn-nova-dark {
    background: #09090b;
    color: white;
    border-radius: 12px;
    font-weight: 700;
    transition: all 0.3s ease;
  }

  .btn-nova-dark:hover {
    background: #2563eb;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(37, 99, 235, 0.2);
  }
</style>

<script>
  (function () {
    "use strict";
    const forms = document.querySelectorAll(".validated-form");
    Array.from(forms).forEach(function (form) {
      form.addEventListener(
        "submit",
        function (event) {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add("was-validated");
        },
        false
      );
    });
  })();
</script>
