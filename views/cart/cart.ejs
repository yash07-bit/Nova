<% layout('layouts/boilerplate') %>

<div class="container mb-5 mt-4">
  <div class="d-flex align-items-center mb-5">
    <div class="brand-icon-box me-3">
      <i class="bi bi-bag-check-fill fs-3 text-primary"></i>
    </div>
    <h1 class="display-6 fw-bold m-0">Shopping Cart</h1>
  </div>

  <% if (cart.items.length === 0) { %>
  <div class="empty-cart-state text-center py-5">
    <div class="mb-4">
      <div class="empty-icon-circle">
        <i class="bi bi-cart-x text-muted"></i>
      </div>
    </div>
    <h3 class="fw-bold">Your bag is empty</h3>
    <p class="text-muted mb-4">
      Looks like you haven't added anything to your cart yet.
    </p>
    <a href="/products" class="btn btn-nova-primary px-5 py-3">
      Start Discovery
    </a>
  </div>
  <% } else { %>
  <div class="row g-4">
    <div class="col-lg-8">
      <div class="cart-items-wrapper">
        <% let grandTotal = 0; %> <% cart.items.forEach(item => { %> <% let
        total = item.product.price * item.quantity; grandTotal += total; %>
        <div class="cart-item-card mb-3">
          <div class="row align-items-center g-0">
            <div class="col-3 col-md-2 p-3">
              <div class="product-thumb-wrapper">
                <img
                  src="<%= item.product.images[0]?.url || 'https://via.placeholder.com/150' %>"
                  alt="<%= item.product.title %>"
                  class="img-fluid rounded-4"
                />
              </div>
            </div>
            <div class="col-9 col-md-10 p-3">
              <div class="d-flex justify-content-between align-items-start">
                <div>
                  <a
                    href="/products/<%= item.product._id %>"
                    class="cart-product-title"
                  >
                    <%= item.product.title %>
                  </a>
                  <p class="small text-muted mb-2">
                    Unit Price: $<%= item.product.price.toFixed(2) %>
                  </p>
                </div>
                <form
                  action="/cart/remove/<%= item.product._id %>?_method=DELETE"
                  method="POST"
                >
                  <button class="btn-remove-item">
                    <i class="bi bi-trash3"></i>
                  </button>
                </form>
              </div>

              <div
                class="d-flex justify-content-between align-items-center mt-3"
              >
                <form
                  action="/cart/update/<%= item.product._id %>?_method=PUT"
                  method="POST"
                  class="quantity-controller"
                >
                  <input
                    type="number"
                    name="quantity"
                    value="<%= item.quantity %>"
                    min="1"
                    class="qty-input"
                  />
                  <button
                    type="submit"
                    class="qty-update-btn"
                    title="Update Quantity"
                  >
                    <i class="bi bi-arrow-repeat"></i>
                  </button>
                </form>
                <span class="fs-5 fw-bold text-dark"
                  >$<%= total.toFixed(2) %></span
                >
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="summary-card shadow-sm border-0">
        <h4 class="fw-bold mb-4">Order Summary</h4>
        <div class="summary-row">
          <span class="text-muted">Subtotal</span>
          <span class="fw-medium">$<%= grandTotal.toFixed(2) %></span>
        </div>
        <div class="summary-row">
          <span class="text-muted">Estimated Shipping</span>
          <span class="text-success fw-bold">FREE</span>
        </div>
        <div class="summary-row">
          <span class="text-muted">Tax</span>
          <span class="fw-medium">Calculated at checkout</span>
        </div>
        <hr class="my-4 opacity-10" />
        <div class="d-flex justify-content-between align-items-center mb-4">
          <span class="h5 fw-bold m-0">Total</span>
          <span class="h4 fw-bold text-primary m-0"
            >$<%= grandTotal.toFixed(2) %></span
          >
        </div>

        <form action="/orders/create" method="POST">
          <button class="btn btn-nova-checkout w-100 mb-3">
            Secure Checkout <i class="bi bi-lock-fill ms-2"></i>
          </button>
        </form>

        <div class="payment-methods text-center">
          <p class="small text-muted mb-2">We Accept</p>
          <div class="d-flex justify-content-center gap-2 opacity-50 grayscale">
            <i class="bi bi-credit-card-2-front fs-4"></i>
            <i class="bi bi-paypal fs-4"></i>
            <i class="bi bi-apple fs-4"></i>
          </div>
        </div>
      </div>

      <a
        href="/products"
        class="btn btn-link text-muted w-100 mt-3 text-decoration-none small"
      >
        <i class="bi bi-arrow-left me-1"></i> Keep Shopping
      </a>
    </div>
  </div>
  <% } %>
</div>

<style>
  /* Base Container */
  .brand-icon-box {
    width: 48px;
    height: 48px;
    background: rgba(37, 99, 235, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Cart Items Styling */
  .cart-item-card {
    background: white;
    border: 1px solid rgba(0, 0, 0, 0.05);
    border-radius: 20px;
    transition: all 0.3s ease;
  }

  .cart-item-card:hover {
    border-color: var(--brand-primary);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.04);
  }

  .cart-product-title {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--text-main);
    text-decoration: none;
    display: block;
    margin-bottom: 2px;
  }

  .cart-product-title:hover {
    color: var(--brand-primary);
  }

  /* Quantity Controller */
  .quantity-controller {
    background: #f8fafc;
    padding: 4px 8px;
    border-radius: 12px;
    display: inline-flex;
    align-items: center;
    border: 1px solid #e2e8f0;
  }

  .qty-input {
    border: none;
    background: transparent;
    width: 45px;
    text-align: center;
    font-weight: 600;
  }

  .qty-input:focus {
    outline: none;
  }

  .qty-update-btn {
    border: none;
    background: var(--brand-primary);
    color: white;
    border-radius: 8px;
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: 0.2s;
  }

  .qty-update-btn:hover {
    background: var(--brand-dark);
    transform: rotate(45deg);
  }

  /* Buttons */
  .btn-remove-item {
    border: none;
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
    width: 32px;
    height: 32px;
    border-radius: 8px;
    transition: 0.2s;
  }

  .btn-remove-item:hover {
    background: #ef4444;
    color: white;
  }

  .btn-nova-checkout {
    background: var(--brand-dark);
    color: white;
    border: none;
    padding: 16px;
    border-radius: 14px;
    font-weight: 700;
    transition: all 0.3s ease;
  }

  .btn-nova-checkout:hover {
    background: var(--brand-primary);
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(37, 99, 235, 0.2);
  }

  /* Summary Card */
  .summary-card {
    background: white;
    border-radius: 24px;
    padding: 30px;
    position: sticky;
    top: 100px;
  }

  .summary-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 15px;
  }

  /* Empty State */
  .empty-icon-circle {
    width: 120px;
    height: 120px;
    background: #f1f5f9;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    font-size: 3.5rem;
  }

  .grayscale {
    filter: grayscale(1);
  }
</style>
