<nav class="navbar navbar-expand-lg sticky-top navbar-custom">
  <div class="container flex-wrap">
    <a class="navbar-brand" href="/">
      <i class="bi bi-lightning-charge-fill me-2"></i>NOVA
    </a>

    <button
      class="navbar-toggler border-0"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#novaNavbar"
    >
      <i class="bi bi-grid-fill text-primary fs-2"></i>
    </button>

    <div class="collapse navbar-collapse" id="novaNavbar">
      <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link nav-link-custom" href="/products">Shop</a>
        </li>
        <li class="nav-item">
          <a
            class="nav-link nav-link-custom"
            href="/products?category=electronics"
            >Electronics</a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link nav-link-custom" href="/products?category=fashion"
            >Fashion</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link nav-link-custom text-danger fw-bold"
            href="/products?category=deals"
          >
            <i class="bi bi-fire me-1"></i>Hot Deals
          </a>
        </li>
      </ul>

      <form class="search-wrapper me-lg-3" action="/products" method="GET">
        <button type="submit" class="search-icon-btn">
          <i class="bi bi-search"></i>
        </button>
        <input
          class="form-control search-input-custom"
          type="search"
          name="search"
          placeholder="What are you looking for?"
        />
      </form>

      <div class="d-flex align-items-center gap-3">
        <% if (!currentUser) { %>
        <a href="/login" class="nav-link-custom text-decoration-none">Login</a>
        <a href="/signup" class="btn btn-join">Join Now</a>
        <% } else { %>

        <a href="/wishlist" class="action-btn d-none d-md-flex">
          <i class="bi bi-heart fs-5"></i>
        </a>

        <a href="/cart" class="action-btn">
          <i class="bi bi-bag-handle fs-5"></i>
          <% if (currentUser.cart && currentUser.cart.items &&
          currentUser.cart.items.length > 0) { %>
          <span class="cart-badge-custom">
            <%= currentUser.cart.items.length %>
          </span>
          <% } %>
        </a>

        <div class="dropdown">
          <div
            class="user-avatar"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <%= currentUser.username.charAt(0).toUpperCase() %>
          </div>
          <ul
            class="dropdown-menu dropdown-menu-end border-0 shadow-lg mt-3 p-2"
            style="border-radius: 16px; min-width: 200px"
          >
            <li>
              <div class="dropdown-header fw-bold text-dark">
                Hello, <%= currentUser.username %>!
              </div>
            </li>
            <li>
              <a class="dropdown-item rounded-3 py-2" href="/profile"
                ><i class="bi bi-person me-2"></i>My Profile</a
              >
            </li>
            <li>
              <a class="dropdown-item rounded-3 py-2" href="/orders"
                ><i class="bi bi-box-seam me-2"></i>Orders</a
              >
            </li>
            <li><hr class="dropdown-divider opacity-50" /></li>
            <li>
              <a class="dropdown-item rounded-3 py-2 text-danger" href="/logout"
                ><i class="bi bi-box-arrow-right me-2"></i>Sign Out</a
              >
            </li>
          </ul>
        </div>
        <% } %>
      </div>
    </div>

    <!-- Category Filter Bar -->
    <div class="w-100">
      <div class="category-nav">
        <a
          href="/products"
          class="cat-link <%= (!locals.category || locals.category === 'all') ? 'active' : '' %>"
          >All</a
        >

        <a
          href="/products?category=electronics"
          class="cat-link <%= (locals.category === 'electronics') ? 'active' : '' %>"
        >
          Electronics
        </a>

        <a
          href="/products?category=fashion"
          class="cat-link <%= (locals.category === 'fashion') ? 'active' : '' %>"
        >
          Fashion
        </a>

        <a
          href="/products?category=home"
          class="cat-link <%= (locals.category === 'home') ? 'active' : '' %>"
          >Home</a
        >

        <a
          href="/products?category=beauty"
          class="cat-link <%= (locals.category === 'beauty') ? 'active' : '' %>"
          >Beauty</a
        >

        <a
          href="/products?category=sports"
          class="cat-link <%= (locals.category === 'sports') ? 'active' : '' %>"
          >Sports</a
        >

        <a
          href="/products?category=other"
          class="cat-link <%= (locals.category === 'other') ? 'active' : '' %>"
          >Other</a
        >
      </div>
    </div>
  </div>
</nav>

<script>
  window.addEventListener("scroll", function () {
    const nav = document.querySelector(".navbar-custom");
    if (window.scrollY > 50) {
      nav.classList.add("scrolled");
    } else {
      nav.classList.remove("scrolled");
    }
  });
</script>
